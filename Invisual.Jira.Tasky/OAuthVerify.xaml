<Window x:Class="Invisual.Jira.Tasky.OAuthVerify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Invisual.Jira.Tasky"
             mc:Ignorable="d" 
             Height="150" Width="290"
             Title="Enter Verification Code"
             >
	<Grid>
		<TextBox x:Name="VerificationCodeTextBox" Text="{Binding Path=VerificationCode, Mode=TwoWay, ValidatesOnExceptions=True}" AcceptsReturn="True" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" BorderThickness="2"/>
		<Button x:Name="button" IsDefault="True" Content="Authorize" HorizontalAlignment="Left" Margin="175,69,0,0" VerticalAlignment="Top" Width="85" Height="31" Click="AuthorizeButtonClick" />
		<Button x:Name="button1" IsCancel="True" Content="Cancel" HorizontalAlignment="Left" Margin="85,69,0,0" Width="85" Height="31" VerticalAlignment="Top"/>
	</Grid>
</Window>
